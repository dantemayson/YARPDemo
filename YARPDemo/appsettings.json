{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "route1": {
        "ClusterId": "cluster1",
        "CorsPolicy": "customPolicy",
        "Match": {
          "Path": "/api/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "{**catch-all}" }
        ]
      },
      "route2": {
        "ClusterId": "cluster2",
        "CorsPolicy": "customPolicy",
        "Match": {
          "Path": "/mvc/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "{**catch-all}" }
        ]
      }
    },
    "Clusters": {
      "cluster1": {
        "Destinations": {
          "destination1": {
            "Address": "http://host.docker.internal:5167"
          } 
        }
      },
      "cluster2": {
        "Destinations": {
          "destination1": {
            "Address": "http://host.docker.internal:5199"
          }
        }
      }
    }
  }
}
